# Grooved Learning Fulfillment System Environment Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
APP_NAME="Grooved Learning Fulfillment System"
MAX_CONCURRENT_ORDERS=50
REQUEST_TIMEOUT_SECONDS=30

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fulfillment
DB_USER=fulfillment
DB_PASSWORD=your_secure_password_here
DB_MIN_CONNECTIONS=5
DB_MAX_CONNECTIONS=20

# =============================================================================
# REDIS SETTINGS
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=30

# =============================================================================
# SHOPIFY PLUS INTEGRATION
# =============================================================================
SHOPIFY_SHOP_DOMAIN=your-shop-name
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token_here
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret_here
SHOPIFY_API_VERSION=2023-01

# =============================================================================
# SHIPPING CARRIER APIs
# =============================================================================

# USPS Configuration
SHIPPING_USPS_API_KEY=your_usps_api_key_here
SHIPPING_USPS_USERNAME=your_usps_username
SHIPPING_USPS_PASSWORD=your_usps_password
SHIPPING_USPS_BASE_URL=https://api.usps.com

# UPS Configuration
SHIPPING_UPS_API_KEY=your_ups_api_key_here
SHIPPING_UPS_USERNAME=your_ups_username
SHIPPING_UPS_PASSWORD=your_ups_password
SHIPPING_UPS_BASE_URL=https://api.ups.com

# FedEx Configuration
SHIPPING_FEDEX_API_KEY=your_fedex_api_key_here
SHIPPING_FEDEX_SECRET_KEY=your_fedex_secret_key_here
SHIPPING_FEDEX_BASE_URL=https://api.fedex.com

# General Shipping Settings
SHIPPING_DEFAULT_PACKAGE_TYPE=BOX
SHIPPING_MAX_WEIGHT_OZ=1600

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
STORAGE_PROVIDER=google_drive

# Google Drive Settings
STORAGE_GOOGLE_DRIVE_CREDENTIALS_PATH=./config/google-drive-credentials.json
STORAGE_GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here

# S3 Settings (Alternative)
STORAGE_S3_BUCKET_NAME=grooved-learning-fulfillment
STORAGE_S3_REGION=us-west-2
STORAGE_S3_ACCESS_KEY=your_s3_access_key
STORAGE_S3_SECRET_KEY=your_s3_secret_key

# Local Storage (Development)
STORAGE_LOCAL_STORAGE_PATH=./storage

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
MONITORING_PROMETHEUS_ENABLED=true
MONITORING_PROMETHEUS_PORT=9090
MONITORING_LOG_LEVEL=INFO
MONITORING_LOG_FORMAT=json
MONITORING_HEALTH_CHECK_TIMEOUT=30

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECURITY_API_KEY=your_api_key_here
SECURITY_JWT_SECRET=your_jwt_secret_here
SECURITY_JWT_EXPIRY_MINUTES=60
SECURITY_ALLOWED_ORIGINS=http://localhost:3000,https://groovedlearning.com
SECURITY_ALLOWED_HOSTS=localhost,127.0.0.1,groovedlearning.com
SECURITY_RATE_LIMIT_REQUESTS=100
SECURITY_RATE_LIMIT_WINDOW=60

# =============================================================================
# WAREHOUSE CONFIGURATION
# =============================================================================

# California Warehouse
WAREHOUSE_CA_NAME=Grooved Learning CA
WAREHOUSE_CA_ADDRESS1=123 Education Way
WAREHOUSE_CA_CITY=Los Angeles
WAREHOUSE_CA_STATE=CA
WAREHOUSE_CA_POSTAL_CODE=90210
WAREHOUSE_CA_PHONE=

# Pennsylvania Warehouse  
WAREHOUSE_PA_NAME=Grooved Learning PA
WAREHOUSE_PA_ADDRESS1=456 Learning Lane
WAREHOUSE_PA_CITY=Philadelphia
WAREHOUSE_PA_STATE=PA
WAREHOUSE_PA_POSTAL_CODE=19019
WAREHOUSE_PA_PHONE=

# Business Rules
WAREHOUSE_DEFAULT_WAREHOUSE_SELECTION=distance_optimized
WAREHOUSE_INVENTORY_SYNC_INTERVAL_MINUTES=15

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Test Order Settings
TEST_CUSTOMER_EMAIL=test@groovedlearning.com
TEST_SHIPPING_ADDRESS_NAME=Test Customer
TEST_SHIPPING_ADDRESS_LINE1=123 Test Street
TEST_SHIPPING_CITY=Test City
TEST_SHIPPING_STATE=CA
TEST_SHIPPING_POSTAL_CODE=90210

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Amazon MWS/SP-API (if needed)
AMAZON_MARKETPLACE_ID=your_marketplace_id
AMAZON_SELLER_ID=your_seller_id
AMAZON_ACCESS_KEY_ID=your_access_key
AMAZON_SECRET_ACCESS_KEY=your_secret_key
AMAZON_ROLE_ARN=your_role_arn

# TikTok Shop API (if needed)
TIKTOK_SHOP_APP_KEY=your_tiktok_app_key
TIKTOK_SHOP_APP_SECRET=your_tiktok_app_secret
TIKTOK_SHOP_ACCESS_TOKEN=your_tiktok_access_token