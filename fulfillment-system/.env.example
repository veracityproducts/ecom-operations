# Grooved Learning Fulfillment System Configuration
# Copy this file to .env and update with your actual values

# Database Options:
# 1. Default: JSON file storage (no configuration needed - works immediately)
# 2. Airtable: Set AIRTABLE_* variables below when ready to migrate
# 3. PostgreSQL: Set DB_* variables for full database support
# 4. DuckDB: No configuration needed (local file-based)

# Application Settings
APP_NAME="Grooved Learning Fulfillment System"
APP_VERSION="0.1.0"
DEBUG=false
ENVIRONMENT=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fulfillment
DB_USER=postgres
DB_PASSWORD=your_database_password_here
DB_MIN_CONNECTIONS=5
DB_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=30

# Shippo Configuration (Primary Shipping Platform)
SHIPPING_SHIPPO_API_TOKEN=shippo_live_your_production_token_here
SHIPPING_SHIPPO_TEST_API_TOKEN=shippo_test_your_test_token_here
SHIPPING_SHIPPO_BASE_URL=https://api.goshippo.com
SHIPPING_SHIPPO_RATE_LIMIT_TIER=standard
SHIPPING_SHIPPO_PREFERRED_CARRIER=usps

# Shopify Plus Configuration
SHOPIFY_SHOP_DOMAIN=your-shop-name
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token_here
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret_here
SHOPIFY_API_VERSION=2023-01

# Storage Configuration
STORAGE_PROVIDER=google_drive
STORAGE_GOOGLE_DRIVE_CREDENTIALS_PATH=./credentials/google-drive-key.json
STORAGE_GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here
STORAGE_LOCAL_STORAGE_PATH=./storage

# Airtable Configuration (Optional - for future database migration)
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_base_id_here
AIRTABLE_ORDERS_TABLE=Orders
AIRTABLE_LINE_ITEMS_TABLE=Line Items
AIRTABLE_FULFILLMENTS_TABLE=Fulfillments
AIRTABLE_INVENTORY_TABLE=Inventory

# Monitoring Configuration
MONITORING_PROMETHEUS_ENABLED=true
MONITORING_PROMETHEUS_PORT=9090
MONITORING_LOG_LEVEL=INFO
MONITORING_LOG_FORMAT=json
MONITORING_HEALTH_CHECK_TIMEOUT=30

# Security Configuration
SECURITY_API_KEY=your_api_key_here
SECURITY_JWT_SECRET=your_jwt_secret_here
SECURITY_JWT_EXPIRY_MINUTES=60
SECURITY_ALLOWED_ORIGINS=["http://localhost:3000","https://groovedlearning.com"]
SECURITY_ALLOWED_HOSTS=["localhost","127.0.0.1","groovedlearning.com"]
SECURITY_RATE_LIMIT_REQUESTS=100
SECURITY_RATE_LIMIT_WINDOW=60

# Warehouse Configuration - California
WAREHOUSE_CA_NAME="Grooved Learning CA"
WAREHOUSE_CA_ADDRESS1="123 Education Way"
WAREHOUSE_CA_CITY="Los Angeles"
WAREHOUSE_CA_STATE="CA"
WAREHOUSE_CA_POSTAL_CODE="90210"
WAREHOUSE_CA_PHONE="555-123-4567"

# Warehouse Configuration - Pennsylvania
WAREHOUSE_PA_NAME="Grooved Learning PA"
WAREHOUSE_PA_ADDRESS1="456 Learning Lane"
WAREHOUSE_PA_CITY="Philadelphia"
WAREHOUSE_PA_STATE="PA"
WAREHOUSE_PA_POSTAL_CODE="19019"
WAREHOUSE_PA_PHONE="555-234-5678"

# Warehouse Business Rules
WAREHOUSE_DEFAULT_WAREHOUSE_SELECTION=distance_optimized
WAREHOUSE_INVENTORY_SYNC_INTERVAL_MINUTES=15

# Performance Settings
MAX_CONCURRENT_ORDERS=50
REQUEST_TIMEOUT_SECONDS=30